<?xml version="1.0" encoding="UTF-8"?>
<xs:schema  attributeFormDefault="unqualified" elementFormDefault="qualified"
            targetNamespace="http://www.itroi.org/reminder"
            xmlns:xs="http://www.w3.org/2001/XMLSchema"
            xmlns:rem="http://www.itroi.org/reminder">
    <xs:element name="Reminders" type="RemindersType"/>
    <xs:complexType name="RemindersType">
    <xs:sequence>
        <xs:element name="reminder" type="ReminderType"></xs:element>
    </xs:sequence>
</xs:complexType>
    <xs:complexType name="ReminderType">
        <xs:sequence>
            <xs:element name="state" type="StateType"></xs:element>
            <xs:element name="time" type="xs:dateTime"></xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:simpleType name="StateType">
    <xs:restriction base="xs:unsignedShort">
    <xs:enumeration value="1"/>
    <xs:enumeration value="0"/>
    </xs:restriction>
    </xs:simpleType>
</xs:schema>