<?xml version="1.0" encoding="UTF-8"?>
<xs:schema  attributeFormDefault="unqualified" elementFormDefault="qualified"
            targetNamespace="http://www.itroi.org/task"
            xmlns:xs="http://www.w3.org/2001/XMLSchema"
            xmlns:user="http://www.itroi.org/user"
            xmlns:task="http://www.itroi.org/task"
            xmlns:rem="http://www.itroi.org/reminder">
  <xs:import schemaLocation="User.xsd" namespace="http://www.itroi.org/user"></xs:import>
  <xs:import schemaLocation="Reminder.xsd" namespace="http://www.itroi.org/reminder"></xs:import>
  <xs:element name="Task" type="task:TaskType"/>
  <xs:complexType name="TaskType">
    <xs:sequence>
      <xs:element type="xs:string" name="title"/>
      <xs:element type="xs:date" name="date"/>
      <xs:element type="xs:time" name="time"/>
      <xs:element type="xs:time" name="duration"></xs:element>
      <xs:element type="xs:string" name="description"/>
      <xs:element type="user:userType" name="user"/>
      <xs:element type="rem:RemindersType" name="reminders"></xs:element>
    </xs:sequence>
  </xs:complexType>
</xs:schema>